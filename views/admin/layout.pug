extends ../layout

block head
	script(type='text/javascript', src='/js/app.js')
	script(type='text/javascript', src='/js/libs.admin.js')
	script(type='text/javascript', src='/js/admin.js')

block navright
	span Administration

block content
	.admin
		.grid
			.col-3_sm-12
				include ./sd
			.col
				.admin-header
					h1
						block admin-header
					div
						block admin-actions
						a.btn.btn-deep-orange(href='/logout')
							span
								i.fa.fa-sign-out
								= t('actions.logout')
				.admin-content
					block admin-content

	script(type='text/javascript').
		var langData = {
			ok: "#{t('actions.ok')}",
			cancel: "#{t('actions.cancel')}"
		};
		var userData = {
			locale: "#{user.lang}",
			timezone: "#{user.timezone}"
		};