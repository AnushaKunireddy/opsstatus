extends ../layout

block head
	script(type='text/javascript', src='/js/libs.admin.js')
	script(type='text/javascript', src='/js/app.js')
	script(type='text/javascript', src='/js/admin.js')

block navright
	.nav-item
		a.button.is-outlined(href='/admin/incidents/create')
			i.icon-search
		a.button(href='/admin/incidents/create')
			i.icon-plus
			span= t('admin.incidents.create')

block content
	#root
		.container.is-fluid
			.columns.is-gapless

				.column.is-narrow.sidebar
					include ./sd

				.column.is-white
					block admin-content						

	script(type='text/javascript').
		var langData = {
			ok: "#{t('actions.ok')}",
			cancel: "#{t('actions.cancel')}"
		};
		var userData = {
			locale: "#{user.lang}",
			timezone: "#{user.timezone}"
		};