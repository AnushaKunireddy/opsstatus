extends ./layout

block admin-header
	i.fa.fa-copy
	| Templates

block admin-actions
	button.btn.btn-teal#admin-templates-new
		span
			i.fa.fa-plus
			| Create Template

block admin-content
	#admin-templates
		if tmpls.length > 0
			ul.admin-list
				each tmpl in tmpls
					li(data-id=region._id, data-name=region.name)
						span
							i.fa.fa-sort.handle
							= region.name
						span
							i.fa.fa-edit.edit-action
							i.fa.fa-trash-o.delete-action
		else
			.admin-box
				| No template has been created yet.